<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Signup">
    <FrameLayout
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:background="@drawable/ic_school_bus"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </FrameLayout>

    <LinearLayout
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="15dp"
        android:layout_margin="10dp">

        <TextView
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:singleLine="true"
            android:text="@string/text_welcome_to_school_bus_tracking"
            android:textColor="@color/c_black"
            android:textSize="@dimen/sp18"
            android:layout_marginBottom="@dimen/margin_20"
            />

        <Button
            android:layout_gravity="center_horizontal"
            android:id="@+id/btn_Principal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Principal"
            android:padding="20dp"
            android:layout_margin="@dimen/margin_15"
            android:background="#f5f5f5"
            android:textColor="#131313"
            android:textColorHint="#eda19e9e"
            />
        <Button
            android:layout_gravity="center_horizontal"
            android:id="@+id/btn_Supervisor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Supervisor"
            android:padding="20dp"
            android:layout_margin="15dp"
            android:background="#f5f5f5"
            android:textColor="#131313"
            android:textColorHint="#eda19e9e"
            />
        <Button
            android:layout_gravity="center_horizontal"
            android:id="@+id/btn_parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Parent"
            android:padding="20dp"
            android:layout_margin="@dimen/margin_15"
            android:background="#f5f5f5"
            android:textColor="#131313"
            android:textColorHint="#eda19e9e"
            />
    </LinearLayout>
</RelativeLayout>